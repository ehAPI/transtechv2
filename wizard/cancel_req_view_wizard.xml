<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
            <record model="ir.ui.view" id="wizard_request_cancellation_wizard">
                <field name="name">Request Cancel</field>
                <field name="model">survey.request.message</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                  <form string="Job Selection">
                                <p class="oe_grey">
                                    Let us know why you want to cancel this Request !</p>

                                    <p class="oe_grey">If you want to quit click on Cancel.
                                </p>           
                      <group>
                        <field name="cancel_message" required="1"/>            
                      </group>
                      <footer>
                        <button name="action_cancel_request" string="Submit" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" icon="gtk-cancel" class="oe_link"/>
                      </footer>

                  </form>
                </field>
               </record>

    <record id="action_cancel_req_view_wizard" model="ir.actions.act_window">
            <field name="name">Cancellation: Enter Message</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">survey.request.message</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_request_cancellation_wizard"/>
            <field name="target">new</field>
        </record>


        

       
  </data>
</openerp>
