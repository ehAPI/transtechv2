<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="view_state_info_form" model="ir.ui.view">
			<field name="name">State Setup</field>
			<field name="model">res.country.state</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="State Details">
					<sheet>
						<group>
							<field name="name"/>
							<field name="code"/>
							<field name="country_id"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>


		<record id="view_state_tree" model="ir.ui.view">
			<field name="name">State Tree</field>
			<field name="model">res.country.state</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="State Information">
					<field name="name"/>
					<field name="code"/>
					<field name="country_id"/>
				</tree>
			</field>
		</record>

		<record id="action_country_state" model="ir.actions.act_window">
			<field name="name">State Setup</field>
		   <field name="type">ir.actions.act_window</field>
		   <field name="res_model">res.country.state</field>
		   <field name="view_type">form</field>
		   <field name="view_id" ref="view_state_tree"/>
		   <field name="view_mode">tree,form</field>         
		   <field name="help" type="html">
          		<p class="oe_view_nocontent_create">
            	Click to add new States.....
          		</p>
				
       		</field>
		</record>

		<!-- Top menu -->
		<menuitem name="ATM Survey Management" id="atm_survey_management"/>

		<!-- sub menu -->
		<menuitem name="Administration Setup" id="admin_setup" parent="atm_survey_management" sequence="6"/>
		
		<!-- menu item -->
		<menuitem name="State Setup" parent="admin_setup" id="state_setup_menu_mainform" action="action_country_state"  sequence="2" />
	</data>
</openerp>