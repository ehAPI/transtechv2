			<record id="view_alerts_dashbd_tree" model="ir.ui.view">
			    <field name="name">alert.tree</field>
			    <field name="model">internal.alerts</field>
			    <field eval="50" name="priority"/>
			    <field name="arch" type="xml">
			        <tree string="ATM Task Tree">
			            <field name="alert_id"/>
			            <field name="customer"/>
			            <field name="atm"/>
			            <field name="country"/>
			            <field name="state" />
			            <field name="assigned_to"/>
			            <field name="description"/>
			            <field name="summary"/>
			            <field name="status"/>
			        </tree>
			    </field>
			</record>

	        <record id="my_open_atm_alerts_action" model="ir.actions.act_window">
	            <field name="name">Alerts for You</field>
	            <field name="res_model">internal.alerts</field>
	            <field name="view_type">form</field>
		    <field name="limit">80</field>
	            <field name="view_mode">tree,form</field>
	         	<field name="domain">['|','|',('assigned_to','=',uid),('created_by','=',uid),('status','not in',('resolved','closed'))]</field>
			<!-- <field name="domain">[('status','not in',('resolved','closed'))]</field> -->
	            <field name="view_id" ref="view_alerts_dashbd_tree"/>
	        </record>

			<record id="board_alerts_done_form" model="ir.ui.view">
			    <field name="name">board.alert.form</field>
			    <field name="model">board.board</field>
			    <field name="arch" type="xml">
			        <form string="My Board ATM" version="7.0">
			            <board style="2-1">
			                <column>
			                    <action name="%(my_open_atm_alerts_action)d" string="New Alerts"/>
			                </column>
			            </board>
			        </form>
			    </field>
			</record>

	        <record id="open_board_atm_alerts_queue" model="ir.actions.act_window">
	            <field name="name">Alerts for You</field>
	            <field name="res_model">board.board</field>
	            <field name="view_type">form</field>
			    <field name="limit">80</field>
	            <field name="view_mode">form</field>
	            <field name="usage">menu</field>
	            <field name="view_id" ref="board_alerts_done_form"/>
	        </record>

			<!-- Top menu -->
			<menuitem name="ATM Survey Management" id="atm_survey_management"/>

			<!-- sub menu -->
			<menuitem name="ATM Dashboard" id="atm_dashboard" parent="atm_survey_management" groups='group_atm_manager,group_atm_user'/>
			 

			<!-- <menuitem name="Alerts for You" parent='atm_dashboard' id='alerts_dashboard_left' action='alerts_dashboard_action' sequence="3"/> -->

			<menuitem id="menu_atm_alert_dashboard"  parent="atm_dashboard" sequence='2' action="open_board_atm_alerts_queue"/>
		
