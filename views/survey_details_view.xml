		    <field name="type">tree</field>
		    <field name="arch" type="xml">
			<tree string="Survey Details" version="8.0">
				<field name="name"/>
				<field name="atm_report"/>
				<field name="month"/>
				
				<field name="atm"/>
				<field name="state"/>

